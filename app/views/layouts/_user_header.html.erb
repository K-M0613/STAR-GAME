<header>
  <nav class="navbar navbar-expand navbar-dark border-bottom  navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', size: "55x55" %>
        <% end %>
      </div>
      <h4>STAR GAME</h4>
      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item" style="list-style: none;">
            <%= link_to about_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-lightbulb"></i>
              サイト概要
            <% end %>
          </li>
          <li class="nav-item" style="list-style: none;">
            <%= link_to my_page_path(current_user), class: 'nav-link text-dark' do %>
              <i class="fas fa-user"></i>
              マイページ
            <% end %>
          </li>
          <li class="nav-item" style="list-style: none;">
            <%= link_to posts_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-gamepad"></i>
              投稿一覧
            <% end %>
          </li>
          <li class="nav-item" style="list-style: none;">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i>
              ログアウト
            <% end %>
          </li>
        <% else %>
        <li class="nav-item" style="list-style: none;">
          <%= link_to about_path, class: 'nav-link text-dark' do %>
            <i class="fas fa-lightbulb"></i>
            サイト概要
          <% end %>
        </li>
        <li class="nav-item" style="list-style: none;">
          <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
            <i class="fas fa-user-plus"></i>
            新規登録
          <% end %>
        </li>
        <li class="nav-item" style="list-style: none;">
          <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-in-alt"></i>
            ログイン
          <% end %>
        </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>