<header>
  <nav class="navbar navbar-expand navbar-dark border-bottom border-dark navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to admin_root_path do %>
          <%= image_tag 'logo.png', size: "55x55" %>
        <% end %>
      </div>
      <% if admin_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item" style="list-style: none;">
            <%= link_to admin_users_path(current_user), class: 'nav-link text-dark' do %>
              <i class="fas fa-users"></i>
              ユーザー一覧
            <% end %>
          </li>
          <li class="nav-item" style="list-style: none;">
            <%= link_to admin_posts_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-gamepad"></i>
              投稿一覧
            <% end %>
          </li>
          <li class="nav-item" style="list-style: none;">
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i>
              ログアウト
            <% end %>
          </li>
        <% else %>
        <li class="nav-item" style="list-style: none;">
          <%= link_to new_admin_session_path, class: 'nav-link text-dark' do %>
            <i class="fas fa-sign-in-alt"></i>
            ログイン
          <% end %>
        </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>