<% if post.book_marked_by?(current_user) %>
  <%= link_to post_book_marks_path(post), method: :delete, remote: true do %>
    <%= post.book_marks.count %><i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to post_book_marks_path(post), method: :post, remote: true do %>
    <%= post.book_marks.count %><i class="far fa-bookmark"></i>
  <% end %>
<% end %>