<table class="table">
  <th><%= image_tag user.get_profile_image, size:'100x100' %></th>
  <tr>
    <th><%= user.nickname %></th>
  </tr>
  <tr>
    <th><%= user.sex %></th>
  </tr>
  <tr>
    <th><%= user.birth_day %></th>
  </tr>
</table>
<% if user.nickname != "guestuser" %>
<div class="row">
  <%= link_to '', edit_user_path(user), class: "btn btn-online-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>
<% end %>