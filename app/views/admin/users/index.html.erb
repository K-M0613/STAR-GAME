<h2 style="text-align: center;">ユーザー一覧</h2>
<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ユーザーネーム</th>
          <th>性別</th>
          <th>生年月日</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.nickname %>
              <% end %>
            </td>
            <td><%= user.gender %></td>
            <td><%= user.birth_day %></td>
            <td>
              <% if user.is_delete == false %>
                <p class="text-success"><b>有効</b></p>
              <% else %>
                <p class="text-danger"><b>退会</b></p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @users %>
</div>