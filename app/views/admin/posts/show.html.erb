<div class="container pt-5">
  <div class="row">
    <div class="col-md-4">
      <table class="table table-bordered border-primary">
        <tr>
          <%= image_tag @post.user.get_profile_image, size:'100x100' %>
        </tr>
        <tr>
          <th><%= @post.user.nickname %></th>
        </tr>
        <tr>
          <th><%= @post.title %></th>
        </tr>
        <tr>
          <th><%= @post.purpose %></th>
        </tr>
        <tr>
          <th><%= @post.body %></th>
        </tr>
        <tr>
          <th>
            <div id="star-rate<%= @post.id %>"></div>
            <script>
              $('#star-rate<%= @post.id %>').empty();
              $('#star-rate<%= @post.id %>').raty({
                size :36,
                starOff: '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= @post.star %>
              })
            </script>
          </th>
        </tr>
        <tr>
          <th>
            <% @post.tags.each do |tag| %>
              <span><%= tag.name %></span>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>
            <%= link_to "削除", admin_post_path, method: :delete, class: 'btn-sm btn-danger' %>
          </th>
        </tr>
      </table>
    </div>
    <div class="offset-3">
      <div id="comments_area">
        <%= render 'public/comments/post_comments', post: @post %>
      </div>
    </div>
  </div>
</div>
